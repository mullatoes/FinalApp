<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddRatingActivity">


    <ImageView
        android:id="@+id/imageViewItem_rate"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewItemName_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewItem_rate" />

    <TextView
        android:id="@+id/textViewItemPrice_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Price"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="@+id/textViewItemName_rate"
        app:layout_constraintStart_toStartOf="@+id/textViewItemName_rate"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemName_rate" />

    <TextView
        android:id="@+id/textViewItemDescription_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Description"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="@+id/textViewItemPrice_rate"
        app:layout_constraintStart_toStartOf="@+id/textViewItemPrice_rate"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemPrice_rate" />

    <Button
        android:id="@+id/btn_submit_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/textViewItemDescription_rate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewItemDescription_rate"
        app:layout_constraintTop_toBottomOf="@+id/et_add_comment_rate" />

    <RatingBar
        android:id="@+id/ratingBar_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewItemDescription_rate"
        app:layout_constraintStart_toStartOf="@+id/textViewItemDescription_rate"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemDescription_rate" />

    <EditText
        android:id="@+id/et_add_comment_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="add comment"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textViewItemDescription_rate"
        app:layout_constraintStart_toStartOf="@+id/textViewItemDescription_rate"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_rate" />


</androidx.constraintlayout.widget.ConstraintLayout>